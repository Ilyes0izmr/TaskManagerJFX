<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.todolist.controller.AddCategoryController">
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="20.0">
        <Label text="Add New Category" styleClass="heading-label" />
        <TextField fx:id="categoryNameField" promptText="Enter category name" prefWidth="300.0" />
        <Button text="Add" onAction="#handleAddCategory" prefWidth="100.0" />
    </VBox>
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
    </padding>
</AnchorPane>
