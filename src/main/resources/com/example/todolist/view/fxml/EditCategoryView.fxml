<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.todolist.controller.EditCategoryController"
          alignment="CENTER"
          hgap="10"
          vgap="10"
          style="-fx-padding: 20;">
    <Label text="Edit Category" style="-fx-font-size: 16px; -fx-font-weight: bold;" GridPane.columnSpan="2" GridPane.halignment="CENTER"/>

    <Label text="Category Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="categoryNameField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Enter new name"/>

    <Button fx:id="saveChangesButton" text="Save Changes" onAction="#onSaveChanges" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
