<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>
<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.todolist.controller.NewCollabController">
    <VBox alignment="CENTER" spacing="15.0">
        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
        </padding>
        <Label text="New Collaboration" styleClass="heading-label" />
        <ComboBox fx:id="categoryComboBox" promptText="Select a category" prefWidth="300.0" />
        <TextField fx:id="usernameField" promptText="Enter collaborator's username" prefWidth="300.0" />
        <HBox alignment="CENTER" spacing="10.0">
            <Button text="Add Collaboration" onAction="#handleAddCollaboration" prefWidth="150.0" />
            <CheckBox fx:id="fullAccessCheckBox" text="Full Access" />
        </HBox>
    </VBox>
</AnchorPane>
