<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="420.0" prefWidth="350.0" styleClass="anchor-pane" stylesheets="@../css/taskDetails.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.todolist.controller.TaskDetailsController">
    <VBox fx:id="detailsVBox" alignment="TOP_CENTER" layoutX="10" layoutY="10" prefHeight="380.0" prefWidth="330.0" spacing="20" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- Task Details (Section for each detail) -->
        <VBox alignment="CENTER_LEFT" spacing="15">
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label styleClass="field-label" text="ID:" />
                <Label fx:id="idLabel" styleClass="field-value" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label styleClass="field-label" text="Title:" />
                <Label fx:id="titleLabel" styleClass="field-value" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label styleClass="field-label" text="Description:" />
                <Label fx:id="descriptionLabel" styleClass="field-value" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label styleClass="field-label" text="Status:" />
                <Label fx:id="statusLabel" styleClass="field-value" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label styleClass="field-label" text="Due Date:" />
                <Label fx:id="dueDateLabel" styleClass="field-value" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label styleClass="field-label" text="Creation Date:" />
                <Label fx:id="creationDateLabel" styleClass="field-value" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label styleClass="field-label" text="Priority:" />
                <Label fx:id="priorityLabel" styleClass="field-value" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label styleClass="field-label" text="Category:" />
                <Label fx:id="categoryLabel" styleClass="field-value" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="info-box">
                <Label styleClass="field-label" text="Owner:" />
                <Label fx:id="ownerLabel" styleClass="field-value" />
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
